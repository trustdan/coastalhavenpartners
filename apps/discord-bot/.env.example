# Discord Bot Configuration
# Get these from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_application_client_id
DISCORD_CLIENT_SECRET=your_application_client_secret
DISCORD_GUILD_ID=your_server_id

# Discord Role IDs (create these roles in your server first)
DISCORD_UNVERIFIED_ROLE_ID=
DISCORD_CANDIDATE_ROLE_ID=
DISCORD_RECRUITER_ROLE_ID=
DISCORD_CAREER_SERVICES_ROLE_ID=
DISCORD_ADMIN_ROLE_ID=

# Supabase (use SERVICE ROLE key for admin access)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# API Security (generate a secure random string)
BOT_API_SECRET=generate_a_secure_random_string_here

# Website URL for redirects
WEBSITE_URL=https://coastalhavenpartners.com

# Website Webhook (for syncing Discord moderation to website)
# This sends ban/kick/unban events to your website to sync user status
WEBSITE_WEBHOOK_URL=https://coastalhavenpartners.com/api/discord/webhook
WEBSITE_WEBHOOK_SECRET=your_webhook_secret_here

# Server port (Railway will set this automatically)
PORT=3001
