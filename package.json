{
  "name": "full-stack-emails",
  "version": "0.1.0",
  "private": true,
  "description": "AI-Powered Email Outreach Landing Page",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo dev",
    "build": "turbo build",
    "build:registry": "turbo build:registry",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "check": "pnpm lint && pnpm typecheck && pnpm format:check",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  }
}
